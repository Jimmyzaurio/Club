#include <bits/stdc++.h>
using namespace std;
int n,aux;
int arr[200007];
int ord[200007];
int cubeta[4];
string res, aux2;
queue<int> cola[6];
int main()
{
cin >> n;
int i=0;
while(i<n){
cin >> arr[i++];
cubeta[arr[i-1]]++;
}
i=0;
while(cubeta[1]--)
ord[i++]=1;
while(cubeta[2]--)
ord[i++]=2;
while(cubeta[3]--)
ord[i++]=3;
for(int j=0 ; j<n ; j++){
if(arr[j] != ord[j]){
if( arr[j]==1 && ord[j]==2)
cola[0].push(j);
if( arr[j]==1 && ord[j]==3)
cola[1].push(j);
if( arr[j]==2 && ord[j]==1)
cola[2].push(j);
if( arr[j]==2 && ord[j]==3)
cola[3].push(j);
if( arr[j]==3 && ord[j]==1)
cola[4].push(j);
if( arr[j]==3 && ord[j]==2)
cola[5].push(j);
}
}
while(!cola[0].empty() && !cola[2].empty()){
ostringstream oss;
oss << cola[2].front()+1 << " " << cola[0].front()+1 << "\n";
res.append(oss.str());
cola[2].pop();
cola[0].pop();
aux++;
}
while(!cola[1].empty() && !cola[4].empty()){
ostringstream oss;
oss << cola[4].front()+1 << " " << cola[1].front()+1 << "\n";
res.append(oss.str());
cola[4].pop();
cola[1].pop();
aux++;
}
while(!cola[3].empty() && !cola[5].empty()){
ostringstream oss;
oss << cola[5].front()+1 << " " << cola[3].front()+1 << "\n";
res.append(oss.str());
cola[5].pop();
cola[3].pop();
aux++;
}
while(!cola[0].empty() && !cola[4].empty() && !cola[3].empty()){
ostringstream oss;//actualizar despues del primer swap
oss << cola[4].front()+1 << " " << cola[0].front()+1 << "\n";
//res.append(oss.str());
cola[4].push(cola[0].front());
cola[4].pop();
cola[0].pop();
oss << cola[4].front()+1 << " " << cola[3].front()+1 << "\n";
res.append(oss.str());
cola[3].pop();
aux = aux+2;
}
while(!cola[2].empty() && !cola[1].empty() && !cola[5].empty()){
ostringstream oss;//actualizar despues del primer swap
oss << cola[2].front()+1 << " " << cola[1].front()+1 << "\n";
cola[2].push(cola[1].front());
cola[2].pop();
cola[1].pop();
oss << cola[2].front()+1 << " " << cola[5].front()+1 << "\n";
res.append(oss.str());
 
cola[5].pop();
aux = aux+2;
}
cout << aux << "\n" << res;
return 0;
} 